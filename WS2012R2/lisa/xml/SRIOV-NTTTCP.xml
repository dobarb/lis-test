<config>
    <global>
        <logfileRootDir>F:\v-dobarb\SRIOV</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <LisaInitScript>
            <file>.\setupScripts\CreateVMs.ps1</file>
        </LisaInitScript>
        <email>
            <recipients>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>LIS Performance Test Results</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
        <imageStoreDir>\\redmond\wsscfs\OSTC\LIS\VHDStore\upstream\linux-next\SRIOV</imageStoreDir>
       <!-- Optional testParams go here -->
    </global>

    <testSuites>
        <suite>
            <suiteName>ntttcp</suiteName>
            <suiteTests>
                <suiteTest>LinuxNext</suiteTest>
                <!-- <suiteTest>LinuxNext_v6</suiteTest>                 -->
            </suiteTests>
        </suite>
    </testSuites>

    <testCases>
         <test>
            <testName>LinuxNext</testName>
            <setupScript>
                <!-- <file>setupScripts\Check_PowerPlan.ps1</file> -->
                <file>setupscripts\SR-IOV_enable.ps1</file>
            </setupScript>                
            <testScript>SRIOV-ntttcp-client.sh</testScript>          
            <files>remote-scripts/ica/SRIOV-ntttcp-client.sh,remote-scripts/ica/SRIOV-ntttcp-server.sh,remote-scripts/ica/utils.sh,remote-scripts/ica/perf_utils.sh,remote-scripts/ica/SR-IOV_Utils.sh</files>
            <testParams>
                <param>NIC=NetworkAdapter,External,SRIOV,001600112299</param>
                <param>TC_COVERED=IPv4</param>
                <param>SnapshotName=ICABase</param>
                <param>BOND_IP1=10.11.12.51</param>
                <param>BOND_IP2=10.11.12.52</param>
                <param>NETMASK=255.255.255.0</param>       
                <param>REMOTE_USER=root</param>
                <param>TEST_DURATION=60</param>
                <param>TEST_THREADS=(1 2 4 8)</param>
                <param>MAX_THREADS=64</param>
                <param>ETH_NAME=bond0</param>     
                <param>log_folder=logs_ipv4</param>        
                <param>VM2NAME=dobarb-SRIOV-Server</param>
                <param>REMOTE_SERVER=LIS-F2325</param>
                <param>sshKey=rhel5_id_rsa</param>
            </testParams>
            <uploadFiles>
                <file>logs_ipv4.zip</file>
            </uploadFiles>
            <timeout>7200</timeout>
            <OnError>Continue</OnError>
         </test>   
         <test>
            <testName>LinuxNext_v6</testName>
            <setupScript>
                <!-- <file>setupScripts\Check_PowerPlan.ps1</file> -->
                <file>setupscripts\SR-IOV_enable.ps1</file>
            </setupScript>                
            <testScript>SRIOV-ntttcp-client.sh</testScript>          
            <files>remote-scripts/ica/SRIOV-ntttcp-client.sh,remote-scripts/ica/SRIOV-ntttcp-server.sh,remote-scripts/ica/utils.sh,remote-scripts/ica/perf_utils.sh,remote-scripts/ica/SR-IOV_Utils.sh</files>
            <testParams>
                <param>NIC=NetworkAdapter,External,SRIOV,001600112299</param>
                <param>TC_COVERED=IPv6</param>
                <param>SnapshotName=ICABase</param>
                <param>BOND_IP1=fd00::4:10</param>
                <param>BOND_IP2=fd00::4:100</param>
                <param>NETMASK=64</param>                
                <param>REMOTE_USER=root</param>
                <param>TEST_DURATION=60</param>
                <param>TEST_THREADS=(1 2 4 8)</param>
                <param>MAX_THREADS=64</param>
                <param>ETH_NAME=bond0</param>     
                <param>log_folder=logs_ipv6</param>        
                <param>VM2NAME=dobarb-SRIOV-Server</param>
                <param>REMOTE_SERVER=LIS-F2325</param>
                <param>sshKey=rhel5_id_rsa</param>
            </testParams>
            <uploadFiles>
                <file>logs_ipv6.zip</file>
            </uploadFiles>
            <timeout>7200</timeout>
            <OnError>Continue</OnError>
         </test>   
    </testCases>

    <VMs>
        <vm>
            <role>SUT1</role>
            <hvServer>LIS-F2324</hvServer>
            <vmName>dobarb-SRIOV-Client</vmName>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>rhel5_id_rsa.ppk</sshKey>
            <suite>ntttcp</suite>
            <hardware>
               <create>false</create>
               <numCPUs>8</numCPUs>
               <memSize>8192</memSize>
               <disableDiff>True</disableDiff>
               <nic>VMBus,External</nic>
            </hardware>
        </vm>
        <vm>
            <role>NonSUT1</role>
            <hvServer>LIS-F2325</hvServer>
            <vmName>dobarb-SRIOV-Server</vmName>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>rhel5_id_rsa.ppk</sshKey>
            <hardware>
               <create>false</create>
               <numCPUs>8</numCPUs>
               <memSize>8192</memSize>
               <disableDiff>True</disableDiff>
               <nic>VMBus,External</nic>
            </hardware>
        </vm>
    </VMs>
</config>